{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2020",
        "rootDir": "src/",
        "baseUrl": "src/",
        "paths": {
            "/lib/*": [ "lib/*" ],
            "*": [ "*", "util/*" ]
        },
        "outDir": "build/",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["bitburner_scripts/**/*", "Bitburner.t.ts"]
}